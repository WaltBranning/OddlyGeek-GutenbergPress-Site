{% extends 'base.jinja' %}


{% block main %}
    <div id="filter-container">
        
        <div id="filter-control-bar">
            {% for char in "ABCDEFGHIJKLMNOPQRSTUVWXYZ"|list %}
                <button type="button"
                        class="select-button" 
                        onclick="refresh('{{char}}')"
                        id="key-{{char}}">{{char}}</button>
            {% endfor %}
            <button type="button"
                        class="select-button" 
                        onclick="refresh('1')"
                        id="key-1">#</button>
            <div class="selectors-drop-down">
            <label for="num-disp">Number of Results</label>
            <select name="num-disp" id="num-disp-slt">
                <option value="25">25</option>
                <option value="50">50</option>
                <option value="100">100</option>
                <option value="250">250</option>
                <option value="500">500</option>
                <option value="1000">1000</option>
            </select>
            </div>
        </div>
        <div id="spinner-container"></div>
        <div id="results">
            
        </div>
        <div class="pagination-bar">
            <button id="pg-prev" onClick="Paginate.Prev()">Prev</button>
            <button id="pg-position" value="0">1</button>
            <button id="pg-next" onClick="Paginate.Next()">Next</button>
        </div>
    </div>

    

{% endblock main %}      